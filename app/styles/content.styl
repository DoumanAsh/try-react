div#content
    display: block
    flex: 1 1 80%
    text-align: center
    color: #666
    font-family: sans-serif

    & > div.market
        text-align: left
        & > h1
            margin: 0.5rem
        & > div.shop
            & > div.market_header
                background: #333
                color: white

            & > div.market_item
                cursor: pointer

            & > div.market_item
            & > div.market_header
                border: 1px solid
                display: flex
                width: 25%
                justify-content: space-between

                & > p
                    padding: 0.5rem

        & > div.checkout
            & > div.total
            & > div.checkout_item
                padding: .2rem
                display: flex
                word-wrap: break-word
                align-items: center
                border: 1px solid
                justify-content: space-between
                width: 25%

                & > p
                    flex: 1 1 25%
                    word-wrap: break-word
                    padding: 0.5rem


                & > div.quantity
                    flex: 1 1 5%
                    display: flex
                    & > p.quantity
                        flex: 1 0 60%
                    & > div.change
                        & > p
                            font-size: 50%
                            cursor:pointer
                            color:green

            & > div.total
                background: #333
                color: teal
                & > p.total
                    flex: 1 1 75%
                & > p.sum
                    text-align: right
                    flex: 1 1 25%



    & > ul
        padding: 0
        & > li
            padding: .2em 0
            list-style-type: none

            & > label.inactive
                color: #ccc
                text-decoration: line-through
    & > form
        & > input
            font-size: 85%
            padding: .4em
            border: 1px solid #ccc
            border-radius: 2px

        & > button
            background-color: #1FADC5
            border: 1px solid rgba(0,0,0,.2)
            font-size: 75%
            color: #fff
            padding: .4em 1.2em
            border-radius: 2em
            cursor: pointer
            margin: 0 .23em
            outline: none

            &[disabled]
                background-color: #ddd
                color: #aaa
