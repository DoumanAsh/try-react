div#content
    display: block
    flex: 1 1 80%
    text-align: center
    color: #666
    font-family: sans-serif

    & > ul
        padding: 0
        & > li
            padding: .2em 0
            list-style-type: none

            & > label.inactive
                color: #ccc
                text-decoration: line-through
    & > form
        & > input
            font-size: 85%
            padding: .4em
            border: 1px solid #ccc
            border-radius: 2px

        & > button
            background-color: #1FADC5
            border: 1px solid rgba(0,0,0,.2)
            font-size: 75%
            color: #fff
            padding: .4em 1.2em
            border-radius: 2em
            cursor: pointer
            margin: 0 .23em
            outline: none

            &[disabled]
                background-color: #ddd
                color: #aaa
