div#nav
    height: 100%
    box-sizing: border-box
    text-align: center
    color: #666
    background: #333
    transition: width .2s

    & > a
        display: block
        box-sizing: border-box
        width: 100%
        height: 50px
        line-height: 50px
        padding: 0 .8em
        color: white
        text-decoration: none
        background: #444

        &.selected
            background: teal

div.menu
    width: 100%
    text-align: left
    padding-top: 0.5rem
    & > a
        padding: 0 .8em
        text-decoration: none
        color: inherit
        border: 1px
