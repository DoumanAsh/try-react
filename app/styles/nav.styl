div#nav
    height: 100%
    box-sizing: border-box
    text-align: center
    color: #666
    background: #333
    transition: width .2s

    & > a
        display: block
        box-sizing: border-box
        width: 100%
        height: 50px
        line-height: 50px
        padding: 0 .8em
        color: white
        text-decoration: none
        background: #444

        &.selected
            background: teal
