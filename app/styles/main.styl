*
    box-sizing: border-box;
a
    color: #3f894a
    text-decoration: none
    border-bottom: 1px solid rgba(0, 0, 0, 0)

a:hover
    color: #27552e
    border-bottom: 1px solid #27552e

div#app
    display: flex
    position: fixed
    bottom: 0
    top: 0
    left: 0
    right: 0

    & > div
        margin-right: 0.5rem
